{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "${configDir}/node_modules/.cache/typescript/tsconfig.build.tsbuildinfo",
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "jsx": "react-jsx"
  },
  "include": [
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.tsx",
    "${configDir}/src/**/*.cts",
    "${configDir}/src/**/*.ctsx",
    "${configDir}/src/**/*.mts",
    "${configDir}/src/**/*.mtsx",
    "${configDir}/src/**/*.js",
    "${configDir}/src/**/*.jsx",
    "${configDir}/src/**/*.cjs",
    "${configDir}/src/**/*.cjsx",
    "${configDir}/src/**/*.mjs",
    "${configDir}/src/**/*.mjsx"
  ],
  "exclude": [
    "${configDir}/src/**/*.test.js",
    "${configDir}/src/**/*.test.jsx",
    "${configDir}/src/**/*.test.ts",
    "${configDir}/src/**/*.test.tsx",
    "${configDir}/src/**/*.spec.js",
    "${configDir}/src/**/*.spec.jsx",
    "${configDir}/src/**/*.spec.ts",
    "${configDir}/src/**/*.spec.tsx",
    "${configDir}/src/**/*.stories.js",
    "${configDir}/src/**/*.stories.jsx",
    "${configDir}/src/**/*.stories.ts",
    "${configDir}/src/**/*.stories.tsx",
    "${configDir}/src/**/*.docs.md",
    "${configDir}/src/**/*.docs.mdx"
  ]
}
