{
  "name": "tt-packages-demo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "check-format": "prettier -uc --cache .",
    "dev": "turbo dev",
    "format": "prettier -uw --cache .",
    "postinstall": "pnpm lint:ws",
    "lint": "eslint . --max-warnings 0 && turbo lint --continue -- --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "eslint . --fix && turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:ws": "sherif",
    "prepare": "husky",
    "typecheck": "turbo typecheck"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.4.1",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^22.5.1",
    "commitlint": "^19.4.1",
    "cz-git": "^1.9.4",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "sherif": "^0.11.0",
    "turbo": "^2.1.0",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20"
  }
}
