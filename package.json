{
  "name": "tt-packages-demo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build-storybook": "turbo build-storybook",
    "check-exports": "turbo check-exports",
    "check-format": "prettier -uc --cache .",
    "ci": "pnpm run check-format && pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build && pnpm run check-exports",
    "clean": "turbo clean",
    "clean:ws": "rm -rf .turbo node_modules",
    "dev": "turbo dev",
    "format": "prettier -uw --cache .",
    "genereate:changesets": "pnpm changeset-conventional",
    "postinstall": "pnpm lint:ws",
    "lint": "turbo lint --continue -- --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:ws": "sherif",
    "local-release": "changeset version && changeset publish",
    "prepare": "husky",
    "prepublishOnly": "pnpm run ci",
    "storybook": "turbo storybook",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@changesets/cli": "^2.27.7",
    "@commitlint/config-conventional": "^19.4.1",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^22.5.1",
    "changeset-conventional-commits": "^0.2.5",
    "commitlint": "^19.4.1",
    "cz-git": "^1.9.4",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "sherif": "^0.11.0",
    "turbo": "^2.1.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20"
  }
}
